<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>

<BorderPane maxHeight="700.0" maxWidth="1200.0" 
            minHeight="700.0" minWidth="1200.0" 
            prefHeight="700.0" prefWidth="1200.0" 
            stylesheets="@game-view-style.css"
            xmlns="http://javafx.com/javafx/17.0.2-ea" 
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.touchtyped.controller.GameResultViewController">

    <!-- Navigation Bar -->
    <top>
        <HBox styleClass="nav-bar" BorderPane.alignment="CENTER">
            <children>
                <Region fx:id="leftSpacer" HBox.hgrow="ALWAYS" />
                <AnchorPane prefHeight="120.0" prefWidth="1200.0">
                    <children>
                        <ImageView fitHeight="104.0" fitWidth="389.0" layoutX="20.0" layoutY="8.0" pickOnBounds="true" preserveRatio="true">
                            <Image url="@images/logo.png" />
                        </ImageView>
                        <ImageView fx:id="learnButton"
                                fitHeight="69.0" fitWidth="175.0" 
                                layoutX="800.0" layoutY="26.0"
                                pickOnBounds="true" 
                                preserveRatio="true"
                                onMouseClicked="#onLearnButtonClick">
                            <Image url="@images/nav-bar/learn.png" />
                        </ImageView>
                        <ImageView fx:id="gamesButton" 
                                fitHeight="69.0" fitWidth="175.0" 
                                layoutX="900.0" layoutY="26.0" 
                                pickOnBounds="true" 
                                preserveRatio="true"
                                styleClass="nav-button">
                            <Image url="@images/nav-bar/gamesSelected.png" />
                        </ImageView>
                        <ImageView fx:id="optionsButton"
                                fitHeight="69.0" fitWidth="175.0" 
                                layoutX="1000.0" layoutY="26.0" 
                                pickOnBounds="true" 
                                preserveRatio="true"
                                styleClass="nav-button">
                            <Image url="@images/nav-bar/options.png" />
                        </ImageView>
                    </children>
                </AnchorPane>
                <Region fx:id="rightSpacer" HBox.hgrow="ALWAYS" />
            </children>
        </HBox>
    </top>

    <center>
        <VBox alignment="CENTER" spacing="40" styleClass="game-container">
            <!-- Result Title -->
            <Label text="Results" styleClass="result-title"/>
            
            <!-- Main Statistics -->
            <HBox alignment="CENTER" spacing="80" styleClass="result-info">
                <VBox alignment="CENTER" styleClass="result-item">
                    <Label text="words/min(wpm)" styleClass="result-label"/>
                    <Label fx:id="finalWpmLabel" styleClass="result-value"/>
                </VBox>
                <VBox alignment="CENTER" styleClass="result-item">
                    <Label text="accuracy" styleClass="result-label"/>
                    <Label fx:id="finalAccLabel" styleClass="result-value"/>
                </VBox>
                <VBox alignment="CENTER" styleClass="result-item">
                    <Label text="total/correct/error" styleClass="result-label"/>
                    <Label fx:id="finalCharLabel" styleClass="result-value"/>
                </VBox>
            </HBox>

            <!-- Return Button -->
            <HBox alignment="CENTER" spacing="20">
                <Button fx:id="returnButton" 
                        onAction="#onReturnButtonClick"
                        styleClass="control-button"
                        focusTraversable="false">
                    <graphic>
                        <ImageView fitHeight="24" fitWidth="24">
                            <Image url="@images/game-content/return.png"/>
                        </ImageView>
                    </graphic>
                </Button>
            </HBox>
        </VBox>
    </center>
</BorderPane> 