<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.text.*?>

<BorderPane maxHeight="700.0" maxWidth="1200.0" 
            minHeight="700.0" minWidth="1200.0" 
            prefHeight="700.0" prefWidth="1200.0" 
            stylesheets="@game-view-style.css"
            xmlns="http://javafx.com/javafx/17.0.2-ea" 
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.touchtyped.controller.RankingViewController">

    <top>
        <HBox styleClass="nav-bar" BorderPane.alignment="CENTER">
            <children>
                <Region fx:id="leftSpacer" HBox.hgrow="ALWAYS" />
                <AnchorPane prefHeight="120.0" prefWidth="1200.0">
                    <children>
                        <ImageView fitHeight="104.0" fitWidth="389.0" layoutY="8.0" pickOnBounds="true" preserveRatio="true">
                            <Image url="@images/logo.png" />
                        </ImageView>
                        <ImageView fx:id="learnButton"
                                   fitHeight="69.0" fitWidth="175.0"
                                   layoutX="933.0" layoutY="26.0"
                                   pickOnBounds="true"
                                   preserveRatio="true"
                                   onMouseClicked="#onLearnButtonClick"
                                   style="-fx-cursor: hand;">
                            <Image url="@images/nav-bar/learn.png" />
                        </ImageView>
                        <ImageView fx:id="gamesButton"
                                   fitHeight="69.0" fitWidth="71.0"
                                   layoutX="1022.0" layoutY="26.0"
                                   pickOnBounds="true"
                                   preserveRatio="true"
                                   style="-fx-cursor: hand;">
                            <Image url="@images/nav-bar/gamesSelected.png" />
                        </ImageView>
                        <ImageView fx:id="optionsButton"
                                   fitHeight="69.0" fitWidth="175.0"
                                   layoutX="1111.0" layoutY="26.0"
                                   pickOnBounds="true"
                                   preserveRatio="true">
                            <Image url="@images/nav-bar/options.png" />
                        </ImageView>
                    </children>
                </AnchorPane>
                <Region fx:id="rightSpacer" HBox.hgrow="ALWAYS" />
            </children>
        </HBox>
    </top>

    <center>
        <VBox alignment="CENTER" spacing="20" styleClass="game-container">
            <!-- Ranking Title -->
            <Label text="Top 100 Players" styleClass="result-title"/>
            
            <!-- Ranking Table -->
            <TableView fx:id="rankingTable" VBox.vgrow="ALWAYS">
                <columns>
                    <TableColumn fx:id="rankColumn" text="Rank" prefWidth="80"/>
                    <TableColumn fx:id="nameColumn" text="Player Name" prefWidth="200"/>
                    <TableColumn fx:id="wpmColumn" text="WPM" prefWidth="100"/>
                    <TableColumn fx:id="accuracyColumn" text="Accuracy" prefWidth="100"/>
                    <TableColumn fx:id="gameModeColumn" text="Game Mode" prefWidth="150"/>
                    <TableColumn fx:id="dateColumn" text="Date" prefWidth="200"/>
                </columns>
            </TableView>
            
            <!-- Return Button -->
            <HBox alignment="CENTER" spacing="20">
                <Button fx:id="returnButton" 
                        onAction="#onReturnButtonClick"
                        text="Return to Game"
                        styleClass="control-button"
                        focusTraversable="false"/>
            </HBox>
        </VBox>
    </center>
</BorderPane> 